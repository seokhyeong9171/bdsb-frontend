# ==========================================
# BDSB 백엔드 환경변수 (.env)
# EC2 서버의 /home/ubuntu/bdsb-backend/.env 에 배치
# ==========================================

# 서버
PORT=3000
NODE_ENV=production

# MariaDB
DB_HOST=localhost
DB_PORT=3306
DB_USER=bdsb
DB_PASSWORD=여기에_DB_비밀번호_입력
DB_NAME=BDSB

# JWT
JWT_SECRET=여기에_랜덤_시크릿_키_입력
JWT_EXPIRES_IN=7d

# 파일 업로드
UPLOAD_DIR=uploads
MAX_FILE_SIZE=5242880
